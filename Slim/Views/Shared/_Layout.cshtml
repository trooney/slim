<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
	<link rel="stylesheet" media="all" href="//cdn.jsdelivr.net/gumby/2.5.11/css/gumby.css">
	<style type="text/css">
	.slim-create-form .field .input {
		height:48px;
		line-height:44px;
		font-size:20px !important;
	}
	@@media only screen and (min-width: 768px) {
		.slim-create-form {
			padding-top:18px;
		}
		.slim-create-form input {
			margin-top:20px;
		}
	}
	</style>
</head>
<body>
	<div class="row">
		<div class="two columns">
			<h1><a href="/">Slim</a></h1>
		</div>
		<div class="ten columns">
			@RenderSection("BesideLogo", false)
		</div>
	</div>
	<div class="row">
		<div class="twelve columns">
			@RenderBody()
		</div>
	</div>

	<pre>@ViewData["Message"]</pre>
</body>
</html>
