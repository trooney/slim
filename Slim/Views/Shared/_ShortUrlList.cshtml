@model Slim.ViewModels.ShortUrlListViewModel



<table class="rounded">
	<thead>
		<tr>
			<th>Hash</th>
			<th>Short URL</th>
			<th>Full URL</th>
			<th>Count</th>
			<th>Created</th>
		</tr>
	</thead>
	<tbody>
	@foreach (var slimUrl in Model.SlimUrls) {         
	<tr class="slim-links">
		<td>
			<a href="@Html.SlimAbsoluteShortUrl(@slimUrl)">@slimUrl.Hash</a>
			<span class="copy-trigger">Copy</span>
		</td>
		<td>@Html.SlimAbsoluteShortUrl(@slimUrl)</td>
		<td><div style="max-width: 300px;word-wrap: break-word;">@slimUrl.FullUrl</div></td>
		<td>@slimUrl.Count</td>
		<td>@slimUrl.CreatedDate</td>
	</tr>
	}  
	</tbody>
</table>